@using CarRepairGarage.Web.ViewModels.Garage;
@model IEnumerable<GarageViewModel>

@{
    ViewData["Title"] = "Garage Details Page";
}

<div class="container">
    @foreach (var garage in Model)
    {
        <div class="card my-3">
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img src="@garage.ImageUrl" class="card-img" alt="Garage Image">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">@garage.Name</h5>
                        <p class="card-text">Category: <b>@garage.Category</b></p>
                        <p class="card-text">City: <b>@garage.City</b></p>
                        <p class="card-text">Street Name: <b>@garage.StreetName</b></p>
                        <p class="card-text">Street Number: <b>@garage.StreetNumber</b></p>
                        <p class="card-text">Services:</p>
                        <ul>
                            @foreach (var service in garage.Services)
                            {
                                <li>@service</li>
                            }
                        </ul>
                        <a asp-area="Manager" asp-controller="Dashboard" asp-action="Modify" asp-route-id="@garage.Id" class="btn btn-success">Modify</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (ViewBag.TotalPages > 1)
{
    <div class="mt-4">
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                        <a class="page-link" href="/Manager/Dashboard/All?pageIndex=@i">@i</a>
                    </li>
                }
                
            </ul>
        </nav>
    </div>
}
