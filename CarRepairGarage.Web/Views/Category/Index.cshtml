@using CarRepairGarage.Web.ViewModels.Category;
@model IEnumerable<CategoryViewModel>

@{
    ViewData["Title"] = "Category Page";
}
@foreach (var category in Model)
{
    <div class="container" style="display:inline">
        <div class="row">
            <div class="col-4">
                <img class="card-img-top" style="width: 20rem;"
                     src="@category.ImageUrl" alt="House Image">
            </div>
            <div class="card col-8 border-0">
                <p style="font-size:25px;"><u>@category.Name</u></p>

                <p>Description:<b>@category.Description</b></p>
                <div class="form-inline">
                    <a asp-controller="Garage" asp-action="ByCategory" asp-route-id="@category.Id"
                       class="btn btn-success">Find Garage</a>
                </div>
            </div>

        </div>
    </div>
}