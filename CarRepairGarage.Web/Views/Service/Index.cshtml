@using CarRepairGarage.Web.ViewModels.Service;
@model IEnumerable<ServiceViewModel>

@{
    ViewData["Title"] = "Service Page";
}

<div class="row">
    @foreach (var service in Model)
    {
        <div class="col-md-4">
            <p style="font-size:25px;"><u>@service.Name</u></p>

            <p>Description:<b>@service.Description</b></p>
            <div class="form-inline">
                <a asp-controller="Garage" asp-action="ByService" asp-route-id="@service.Id"
                   class="btn btn-success">Find Garage</a>
            </div>

        </div>
    }
</div>

@if (ViewBag.TotalPages > 1)
{
    <div class="mt-4">
        <nav aria-label="Page navigation">
            <ul class="pagination">
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                        <a class="page-link" href="/Service/Index?pageIndex=@i">@i</a>
                    </li>
                }
            </ul>
        </nav>
    </div>
}

