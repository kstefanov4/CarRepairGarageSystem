<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @ApplicationTitle</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CarRepairGarage.Web.styles.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA55EWGUtCN7DkfQX5kVJjHhTAGEYPr-r4"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js" integrity="sha512-lbwH47l/tPXJYG9AcFNoJaTMhGvYWhVM9YI43CT+uteTRRaiLCui8snIgyAN8XWgNjNhCqlAUdzZptso6OCoFQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.css" integrity="sha512-6S2HWzVFxruDlZxI3sXOZZ4/eJ8AcxkQH1+JjSe/ONCEqR9L4Ysq5JdT5ipqtzU7WHalNwzwBv+iE51gNHJNqQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body>
    <partial name="_NotificationsPartial" />
    @if (!Context.Request.Cookies.ContainsKey("CookieConsent"))
    {
        <div class="alert alert-info fixed-bottom mb-0 rounded-0">
            Our website uses cookies to ensure you get the best experience.
            <button id="acceptCookies" class="btn btn-info">I accept</button>
        </div>

        <script>
            document.getElementById("acceptCookies").onclick = function () {
                document.cookie = "CookieConsent=true; expires=Fri, 31 Dec 9999 23:59:59 GMT; path=/";
                location.reload(true);
            }
        </script>
    }
    <div class="container">
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <partial name="_MainMenuPartial" />
                </div>
            </div>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between align-text-end">
                <img src="@Url.Content("~/Images/logo.png")" alt="Logo" width="30" height="24" class="d-inline-block align-items-center">
            </div>
            <div class="container-fluid">
                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; CarRepairGarage @ReleaseYear
            @if (DateTime.UtcNow.Year != ReleaseYear)
            {
                @Html.Raw($"- {DateTime.UtcNow.Year}")
                ;
            }
        </div>
    </footer>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
