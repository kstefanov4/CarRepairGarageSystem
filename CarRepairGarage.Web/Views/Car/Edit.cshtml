@using CarRepairGarage.Web.ViewModels.Car;
@model CarViewModel

@{
    ViewData["Title"] = "Edit Car Page";
}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="VIN"></label>
                <input asp-for="VIN" name="VIN" class="form-control" placeholder="Car VIN NUmber">
                <span asp-validation-for="VIN" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Make"></label>
                <input asp-for="Make" name="Make" class="form-control"
                       placeholder="Make">
                <span asp-validation-for="Make" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarModel"></label>
                <input asp-for="CarModel" name="CarModel" class="form-control"
                       placeholder="Model">
                <span asp-validation-for="CarModel" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year"></label>
                <input asp-for="Year" name="Year" class="form-control">
                <span asp-validation-for="Year" class="small textdanger"></span>
            </div>
            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}