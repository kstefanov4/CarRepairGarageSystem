@using CarRepairGarage.Web.ViewModels.Car;
@model IEnumerable<CarViewModel>

@{
    ViewData["Title"] = "Car Page";
}
@if (Model.Count() < 1)
{
    <p>Your Garege is empty. Please add cars!</p>
}
@foreach (var car in Model)
{
    <div class="container" style="display:inline">
        <div class="row">
            <div class="card col-8 border-0">
                <p style="font-size:25px;"><u>@car.VIN</u></p>

                <p>Model: <b>@car.Make</b></p>
                <p>Model:<b>@car.CarModel</b></p>
                <p>Year:<b>@car.Year</b></p>
                <a asp-controller="Car" asp-action="Edit" asp-route-id="@car.Id"
                   class="btn btn-warning">Edit</a>
                   <p>  </p>
                <a asp-controller="Car" asp-action="Remove" asp-route-id="@car.Id"
                   class="btn btn-warning" onclick="return confirmDelete()">Remove</a>
                @*@Html.ActionLink("Delete", "Remove", "Car", new { id = car.Id }, new { onclick = "return confirm('Are you sure you want to delete this element?');" })*@
            </div>

        </div>
    </div>
}
<script>
    function confirmDelete() {
        return confirm("Are you sure you want to delete this element?");
    }
</script>